<html>
    <head>
        <title>GeSoc</title>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="/main.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">GeSoc</a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {{#if inicio}}active{{/if}}">
                    <a class="nav-link" href="/">Inicio<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item {{#if about}}active{{/if}}">
                    <a class="nav-link" href="/about">Nosotros</a>
                </li>
            </ul>
            <ul class="navbar-nav my-2 my-lg-0">
                {{#if usuario}}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{usuario.nombre}}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/entidades">Entidades</a>
                            <a class="dropdown-item" href="/categorias">Categorías</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/logout">Cerrar Sesión</a>
                        </div>
                    </li>
                {{else}}
                    <li class="nav-item">
                        <a class="btn btn-sm btn-secondary" href="/login">Iniciar Sesión</a>
                        <a class="btn btn-success" href="/signup">Registrarse!</a>
                    </li>
                {{/if}}
            </ul>
        </nav>
        <div class="container my-4">
            {{#block "contenido"}}
            {{/block}}
        </div>
        <footer class="footer">
            <p class="text-center">
                &copy; 2020 GeSoc
            </p>
        </footer>
    </body>
</html>