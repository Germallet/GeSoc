{{#partial "contenido"}}
    <h1>{{entidad.nombreFicticio}}</h1>
    <h3>Entidad {{entidad.tipo}}</h3>
    <div class="form-group">
        <a class="btn btn-primary" role="button" href="/entidades/{{entidad.id}}/egresos">Egresos</a>
    </div>
    <br>
    <form method="POST" action="/entidades/{{entidad.id}}">
        <div class="form-group">
            <label>Nombre</label>
            <div class="form-group">
                <input id="nombreFicticio" type="text" class="form-control" placeholder="Nombre" name="nombreFicticio" value="{{entidad.nombreFicticio}}">
            </div>
        </div>
        <div class="form-group">
            <label>Razón Social</label>
            <div class="form-group">
                <input id="razonSocial" type="text" class="form-control" placeholder="Razón Social" name="razonSocial" value="{{entidad.razonSocial}}">
            </div>
        </div>
        <div class="form-group">
            <label>CUIT</label>
            <div class="form-group">
                <input id="CUIT" type="number" class="form-control" placeholder="CUIT" name="CUIT" value="{{entidad.cuit}}">
            </div>
        </div>
        <div class="form-group">
            <label>Dirección Postal</label>
            <div class="form-group">
                <input id="direccionPostal" type="number" class="form-control" placeholder="Dirección Postal" name="direccionPostal" value="{{entidad.direccionPostal}}">
            </div>
        </div>
        <div class="form-group">
            <label>Categoría</label>
            <select id="categoria" name="categoria" class="form-control custom-select">
                <option>Ninguna</option>
                {{#each usuario.organizacion.categorias}}
                    <option value="{{id}}">{{nombre}}</option>
                {{/each}}
            </select>
        </div>
        <br>
        <div class="d-flex">
            <div class="mr-auto">
                <a class="btn btn-danger" href="/entidades">Cancelar</a>
            </div>
            <div class="ml-auto">
                <input type="submit" class="btn btn-success btn-lg" value="Guardar">
            </div>
        </div>
    </form>
{{/partial}}

{{>layout.hbs}}