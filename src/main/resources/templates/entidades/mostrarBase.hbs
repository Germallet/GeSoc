{{#partial "contenido"}}
    <h1>{{entidad.nombreFicticio}}</h1>
    <h3>Entidad {{entidad.tipo}}</h3>
    <br>

    <form method="POST" action="/entidades/{{entidad.id}}">
        <div class="form-group">
            <label>Nombre</label>
            <div class="form-group">
                <input id="nombreFicticio" type="text" class="form-control" placeholder="Nombre" name="nombreFicticio" value="{{entidad.nombreFicticio}}">
            </div>
        </div>
        <div class="form-group">
            <label>Categoría</label>
            <select id="categoria" name="categoria" class="form-control custom-select">
                <option selected>Ninguna</option>
                {{#each usuario.organizacion.categorias}}
                    <option value="{{id}}">{{nombre}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label>Descripción</label>
            <div class="form-group">
                <input id="descripcion" type="text" class="form-control" placeholder="Descripción" name="descripcion" value="{{entidad.descripcion}}">
            </div>
        </div>
        <br>
        <div class="form-group">
            <a class="btn btn-primary" role="button" href="/entidades/{{entidad.id}}/egresos">Ver egresos</a>
        </div>
        <input type="submit" class="btn btn-success" value="Guardar cambios">
    </form>
{{/partial}}

{{>layout.hbs}}